<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff00ff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/signal"
                style="@style/qs_button_text"
                android:drawableTop="@drawable/mobile_signal_1"
                android:text="@string/signal" />

            <TextView
                android:id="@+id/hotspot"
                style="@style/qs_button_text"
                android:layout_marginLeft="@dimen/qs_panel_btns_padding"
                android:drawableTop="@drawable/mobile_signal_1"
                android:text="@string/hotspot" />

            <TextView
                android:id="@+id/wifi"
                style="@style/qs_button_text"
                android:layout_marginLeft="@dimen/qs_panel_btns_padding"
                android:drawableTop="@drawable/wifi_3"
                android:text="@string/wifi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/mute"
                style="@style/qs_button_text"
                android:drawableTop="@drawable/mobile_signal_1"
                android:text="@string/mute" />

            <TextView
                android:id="@+id/bluetooth"
                style="@style/qs_button_text"
                android:layout_marginLeft="@dimen/qs_panel_btns_padding"
                android:drawableTop="@drawable/bluetooth_on"
                android:text="@string/bluetooth" />
        </LinearLayout>
    </RelativeLayout>
</merge>
